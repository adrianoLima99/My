<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
       >
       <FrameLayout
           android:id="@+id/frl_image"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="110dp"
           android:layout_centerHorizontal="true">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@mipmap/usuario"
            app:siBorderWidth="6dp"
            app:siBorderColor="#FFF"
            android:id="@+id/img_perfil" />
        <ImageView
            android:id="@+id/img_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add_foto"
            android:layout_marginTop="160dp"
            android:layout_gravity="right|center_horizontal"
            />
       </FrameLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/frl_image"
            >
            <EditText
                android:id="@+id/edt_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_nome"
            >
            <EditText
                android:id="@+id/edt_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefone"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_profissao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_tel"
            >

           <!-- <EditText
                android:id="@+id/edt_profissao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Profissão"
                android:inputType="textAutoComplete|textAutoCorrect|"/>-->
            <AutoCompleteTextView
                android:id="@+id/edt_profissao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="profissao"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_profissao"
            >
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:enabled="false"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_sobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_email"
            >
            <EditText
                android:id="@+id/edt_sobre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sobre mim "
                />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/txt_geolocalizacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geolocalização(Ative seu gps para que possamos saber sua localização)"
            android:layout_below="@id/input_sobre"/>

        <EditText
            android:id="@+id/edt_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/edt_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/btn_localizacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obter localização"
            android:background="@color/colorBotao"
            android:textColor="#FFF"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:padding="3dp"
            android:layout_below="@id/txt_geolocalizacao"
            />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_endereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_localizacao"
            >
            <EditText
                android:id="@+id/edt_endereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rua,av..."/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_cidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_endereco"
            >
            <EditText
                android:id="@+id/edt_cidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cidade"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_uf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_cidade"
            >
            <EditText
                android:id="@+id/edt_uf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UF"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_pais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_uf"
            >
            <EditText
                android:id="@+id/edt_pais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Paìs"/>
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/btn_salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:background="@color/colorBotao"
            android:textColor="#FFF"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:padding="3dp"
            android:layout_below="@id/input_pais"
            />
        <!--<Button
            android:id="@+id/btn_teste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:background="@color/colorBotao"
            android:textColor="#FFF"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:padding="3dp"
            />
-->

    </RelativeLayout>
</ScrollView>