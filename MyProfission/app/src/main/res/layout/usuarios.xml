<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.br.myprofission.util.CircularNetworkImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/usuario"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="Vazio"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/numero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:textSize="@dimen/texto_normal"
                android:text="Vazio"

                />
            <TextView
                android:id="@+id/profissao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:textSize="@dimen/texto_normal"
                android:text="Vazio"
                android:textColor="#3CB371"

                />
            <TextView
                android:id="@+id/cid_uf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:textSize="@dimen/texto_normal"
                android:text="Vazio"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/distancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:textSize="@dimen/texto_normal"
                android:text="Vazio"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        >

        <ImageView
            android:id="@+id/img_detalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/detalhes"
            android:padding="2dp"

            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>
        <ImageView
            android:id="@+id/img_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/msg"
            android:padding="3dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"/>
        <ImageView
            android:id="@+id/img_ligar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ligar"
            android:padding="3dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"/>
    </LinearLayout>
</LinearLayout>