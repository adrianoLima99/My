<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.br.myprofission.FotoPerfilActivity">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/usuario"
        app:siBorderWidth="6dp"
        app:siBorderColor="#FFF"
        android:id="@+id/img_perfil"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/btn_alterar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alterar"
        android:layout_below="@id/img_perfil"
        android:onClick="alteraFoto"
        android:background="@color/colorBotao"
        />


</RelativeLayout>
